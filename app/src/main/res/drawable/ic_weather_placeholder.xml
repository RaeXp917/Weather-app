<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#E0E0E0"/> <!-- Light grey background -->
            <size android:width="48dp" android:height="48dp"/>
        </shape>
    </item>
    <item android:gravity="center" android:width="24dp" android:height="2dp">
        <shape android:shape="line">
            <stroke android:width="2dp" android:color="#757575"/> <!-- Darker grey line -->
        </shape>
    </item>
    <item android:gravity="center" android:width="2dp" android:height="24dp">
        <shape android:shape="line">
            <stroke android:width="2dp" android:color="#757575"/> <!-- Darker grey line -->
        </shape>
    </item>
</layer-list>